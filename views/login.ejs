<html>

<head>
    <%- include('./partials/head') %>
        <link rel="stylesheet" type="text/css" href="stylesheets/style.css">
</head>

<body>
    <div class="principal-box">

        <h1>Login</h1>
        <form action="/session" method="POST" id="form-login">
            <div class="dados-login">
                <label for="email">Email:</label>
                <input type="text" id="email-login" placeholder="email" name="email" required>
            </div>
            <div class="dados-login">
                <label for="password">Senha:</label>
                <input type="password" id="password-login" placeholder="senha" name="senha" required>
            </div>
            <div class="login-confirm">
                <button type="submit">Fazer Login</button>
            </div>
        </form>
    </div>





    <!-- Mostra mensagem de erro caso o email ou senha sejam invÃ¡lidos -->
    <p style="color: red; margin-bottom: 24px;">
        <%= error ? error : '' %>
    </p>


</body>

</html>