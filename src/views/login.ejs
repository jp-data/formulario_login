<html>

<head>
    <%- include('./partials/head') %>
        <link rel="stylesheet" type="text/css" href="stylesheets/login.css">
</head>

<body>
    <div class="principal-box">

        <h1>Login</h1>
        <form action="/session" method="POST" class="form" id="form">
            <div class="dados">
                <input type="text" id="email" placeholder="Email" name="email" required>
            </div>
            <div class="dados">
                <input type="password" id="password" placeholder="Senha" name="senha" required>
            </div>
            <div class="login-confirm">
                <button type="submit">Fazer Login</button>
                <p>Ou</p>
                <a href="/sign-up">Cadastre-se</a>
            </div>
        </form>
    </div>





    <!-- Mostra mensagem de erro caso o email ou senha sejam invÃ¡lidos -->
    <p style="color: red; margin-bottom: 24px;">
        <%= error ? error : '' %>
    </p>


</body>

</html>